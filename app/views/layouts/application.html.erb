<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application' 'http://fonts.googleapis.com/css?family=Raleway:400,700'%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
        <%= image_tag "logo.svg"%>
        <% end %>
      </div>

      <ul>
        <li class="category">Website</li>
        <li><%= link_to"Blog", root_path %></li>
        <li><%= link_to"About", about_path %></li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="#">Twitter</a></li>
        <li><a href="#">Instagram</a></li>
        <li><a href="#">Facebook</a></li>
        <li><a href="#">Email</a></li>
      </ul>

      <% if !user_signed_in? %>
      <p class="sign_in">Admin Login</p>
      <% end %>
    </div>

    <div id="main_content">
      <div id="header">
        <%if current_page? (root_path) %>
        <p>All Posts</p>
        <% elsif current_page?(about_path) %>
        <p>About</p>
        <%else%>
        <%= link_to"Back to All Posts", root_path %>
        <% end %>


        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <% if !user_signed_in? %>
          <button class="button"><%= link_to "Sign In", new_user_session_path %></button>
          <button class="button"><%= link_to "Sign Up", new_user_registration_path %></button>
          <% else %>
          <button class="button"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></button>
          <%= image_tag current_user.avatar.medium.url, class: "avatar_nav" if current_user.avatar.url %>
          <% end %>

        </div>

      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

      <%= yield %>

</div>

  </body>
</html>

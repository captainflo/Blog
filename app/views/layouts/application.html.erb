<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application' 'http://fonts.googleapis.com/css?family=Raleway:400,700'%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if controller_name != "pages" || action_name == 'about' || action_name == 'video' %>
    <%= render partial: 'layouts/sidebar' %>

    <div id="main_content">
      <div id="header">
        <%if current_page? (root_path) %>
        <p>All Posts</p>
        <% elsif current_page?(about_path) %>
        <p>About</p>
        <%else%>
        <%= link_to"Back to All Posts", root_path %>
        <% end %>


        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <% if !user_signed_in? %>
          <button class="button"><%= link_to "Sign In", new_user_session_path %></button>
          <button class="button"><%= link_to "Sign Up", new_user_registration_path %></button>
          <% else %>
          <button class="button"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></button>
          <%= link_to edit_user_registration_path do %>
          <%= image_tag current_user.avatar.medium.url, class: "avatar_nav" if current_user.avatar.url %>
          <% end %>
          <% end %>

        </div>

      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>
      <% end %>
      <%= yield %>

</div>

  </body>
</html>
